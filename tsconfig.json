{
  "compilerOptions": {
    "types": [
      "node",
      "jest",
      "svelte"
    ],
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "sourceMap": true,
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*",
    "src/tests/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "dist",
    "__sapper__/*",
    "public/*"
  ]
}